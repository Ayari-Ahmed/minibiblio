{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Lazy load images
    const images = document.querySelectorAll('.book-image');
    if ('IntersectionObserver' in window) {
        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const img = entry.target;
                    img.src = img.dataset.src;
                    img.classList.add('loaded');
                    img.onerror = () => {
                        img.src = 'https://placehold.co/300x450/0D0D0D/FFFFFF/png?text=Image+Indisponible&font=georgia';
                        img.style.backgroundColor = 'var(--gray-dark)';
                    };
                    img.onload = () => {
                        img.style.backgroundColor = 'transparent';
                    };
                    observer.unobserve(img);
                }
            });
        }, { rootMargin: '200px' });

        images.forEach(img => {
            if (img.src === img.dataset.src && img.complete) {
                img.classList.add('loaded');
                img.style.backgroundColor = 'transparent';
            } else {
                observer.observe(img);
            }
        });
    } else {
        images.forEach(img => {
            img.src = img.dataset.src;
            img.classList.add('loaded');
            img.onerror = () => {
                img.src = 'https://placehold.co/300x450/0D0D0D/FFFFFF/png?text=Image+Indisponible&font=georgia';
                img.style.backgroundColor = 'var(--gray-dark)';
            };
            img.onload = () => {
                img.style.backgroundColor = 'transparent';
            };
        });
    }

    // Ripple effect on buttons
    document.querySelectorAll('.btn, .back-button').forEach(btn => {
        btn.addEventListener('click', function(e) {
            const ripple = document.createElement('span');
            ripple.classList.add('ripple');
            const rect = this.getBoundingClientRect();
            const size = Math.max(rect.width, rect.height);
            ripple.style.width = ripple.style.height = `${size}px`;
            ripple.style.left = `${e.clientX - rect.left - size / 2}px`;
            ripple.style.top = `${e.clientY - rect.top - size / 2}px`;
            this.appendChild(ripple);
            setTimeout(() => ripple.remove(), 600);
        });
    });

    // Back to top button
    const backToTop = document.querySelector('.back-to-top');
    window.addEventListener('scroll', function() {
        if (window.scrollY > 300) {
            backToTop.classList.add('visible');
        } else {
            backToTop.classList.remove('visible');
        }
    });

    backToTop.addEventListener('click', function() {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });

    // Book actions
    const bookmarkButton = document.querySelector('.book-actions .btn-primary');
    if (bookmarkButton) {
        bookmarkButton.addEventListener('click', function() {
            alert('Ajouté à votre liste !');
            // Add actual bookmark functionality here
        });
    }

    const shareButton = document.querySelector('.book-actions .btn-outline');
    if (shareButton) {
        shareButton.addEventListener('click', function() {
            alert('Partage de la page !');
            // Add actual share functionality here
        });
    }
});
</script>
