{% block stylesheets %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
/* Base Styles */
:root {
    --black: #0D0D0D;
    --white: #FFFFFF;
    --gray-dark: #262626;
    --gray: #595959;
    --gray-light: #A6A6A6;
    --shadow-sm: 0 2px 8px rgba(0,0,0,0.12);
    --shadow-md: 0 6px 16px rgba(0,0,0,0.18);
    --shadow-lg: 0 12px 32px rgba(0,0,0,0.22);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --border-radius: 8px;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Garamond', 'Georgia', serif;
    line-height: 1.75;
    color: var(--black);
    background: var(--white);
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
}

.container {
    width: 100%;
    max-width: 1320px;
    margin: 0 auto;
    padding: 0 24px;
}
/* User Info Styles */
.user-info {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    background: var(--black);
    padding: 0.7rem 1.3rem;
    border-radius: 24px;
    box-shadow: var(--shadow-sm);
    color: var(--white);
    font-size: 0.97rem;
    font-weight: 500;
    transition: var(--transition);
    border: 1.5px solid var(--gray-dark);
    position: relative;
}

.user-info i {
    font-size: 1.15rem;
    color: var(--white);
    background: var(--gray-dark);
    border-radius: 50%;
    padding: 0.35rem;
    margin-right: 0.2rem;
    transition: var(--transition);
}

.user-info .user-name {
    color: var(--white);
    font-weight: 600;
    letter-spacing: 0.2px;
    margin-right: 0.7rem;
    max-width: 140px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.user-info .btn-outline {
    border-color: var(--white);
    color: var(--white);
    background: transparent;
    padding: 0.4rem 1.1rem;
    font-size: 0.92rem;
    margin-left: 0.3rem;
}

.user-info .btn-outline:hover {
    background: var(--white);
    color: var(--black);
}


/* Button Styles */
.btn {
    display: inline-flex;
    align-items: center;
    padding: 0.8rem 1.8rem;
    border-radius: var(--border-radius);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
    border: none;
    text-decoration: none;
    font-size: 0.95rem;
    position: relative;
    overflow: hidden;
    z-index: 1;
}

.btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: 0.5s;
    z-index: -1;
}

.btn:hover::before {
    left: 100%;
}

.btn-primary {
    background: var(--black);
    color: var(--white);
    box-shadow: var(--shadow-sm);
}

.btn-primary:hover {
    background: var(--gray-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.btn-outline {
    background: transparent;
    border: 1.5px solid var(--white);
    color: var(--white);
}

.btn-outline:hover {
    background: var(--white);
    color: var(--black);
    transform: translateY(-2px);
}

.btn-outline2 {
    background: transparent;
    border: 1.5px solid var(--black);
    color: var(--black);
}

.btn-outline2:hover {
    background: var(--black);
    color: var(--white);
    transform: translateY(-2px);
}

.btn-large {
    padding: 1.1rem 2.4rem;
    font-size: 1rem;
}

/* Tooltip Styles */
[data-tooltip] {
    position: relative;
}

[data-tooltip]::after {
    content: attr(data-tooltip);
    position: absolute;
    top: 100%;
    left: 0;
    transform: translateY(8px);
    background: var(--black);
    color: var(--white);
    padding: 0.4rem 0.8rem;
    border-radius: 4px;
    font-size: 0.8rem;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: var(--transition);
    z-index: 10;
    pointer-events: none;
}

[data-tooltip]:hover::after {
    opacity: 1;
    visibility: visible;
    transform: translateX(-60%) translateY(4px);
}

/* Header Styles */
.site-header {
    background: var(--black);
    padding: 1.8rem 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: var(--shadow-sm);
    backdrop-filter: blur(12px);
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2.2rem;
}

.logo h1 {
    color: var(--white);
    font-size: 2.4rem;
    font-weight: 700;
    letter-spacing: 1.2px;
    text-transform: uppercase;
}

.tagline {
    color: var(--gray-light);
    font-size: 0.85rem;
    font-style: italic;
    letter-spacing: 0.6px;
    margin-top: 0.2rem;
}

/* Navigation */
.main-nav ul {
    display: flex;
    gap: 1.8rem;
    list-style: none;
}

.main-nav a {
    color: var(--white);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    position: relative;
    transition: var(--transition);
}

.main-nav a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 1.5px;
    background: var(--white);
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.3s ease;
}

.main-nav a:hover::after,
.main-nav a.active::after {
    transform: scaleX(1);
}

.cart-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    background: var(--gray-dark);
    color: var(--white);
    border-radius: 50%;
    font-size: 0.75rem;
    margin-left: 0.4rem;
    transition: var(--transition);
}

.main-nav a:hover .cart-badge {
    background: var(--white);
    color: var(--black);
}

/* Search Bar */
.header-search {
    flex: 1;
    max-width: 380px;
}

.search-container {
    position: relative;
    display: flex;
    align-items: center;
}

.search-input {
    width: 100%;
    padding: 0.75rem 1.1rem;
    padding-right: 2.8rem;
    border: 1.5px solid var(--gray-light);
    border-radius: var(--border-radius);
    background: var(--white);
    color: var(--black);
    font-size: 0.9rem;
    transition: var(--transition);
}

.search-input::placeholder {
    color: var(--gray);
}

.search-input:focus {
    outline: none;
    border-color: var(--black);
    box-shadow: var(--shadow-sm);
    transform: scale(1.01);
}

.search-button {
    position: absolute;
    right: 0.9rem;
    top: 50%;
    transform: translateY(-50%);
    background: transparent;
    border: none;
    color: var(--gray);
    cursor: pointer;
    font-size: 1rem;
    transition: var(--transition);
}

.search-button:hover {
    color: var(--black);
    transform: translateY(-50%) scale(1.15);
}

/* Hero Section */
.hero-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    padding: 5rem 0;
    position: relative;
    overflow: hidden;
}

.hero-content {
    z-index: 1;
}

.hero-section h2 {
    font-size: 3.2rem;
    font-weight: 700;
    color: var(--black);
    margin-bottom: 1.2rem;
    letter-spacing: 1.3px;
    text-transform: uppercase;
}

.hero-section p {
    font-size: 1.1rem;
    color: var(--gray);
    margin-bottom: 2rem;
    letter-spacing: 0.3px;
}

.hero-stats {
    display: flex;
    justify-content: flex-start;
    gap: 2rem;
    margin: 1.8rem 0;
}

.stat-item {
    text-align: center;
    transition: var(--transition);
}

.stat-item:hover {
    transform: translateY(-4px);
}

.stat-item i {
    font-size: 1.8rem;
    color: var(--black);
    margin-bottom: 0.4rem;
}

.stat-number {
    display: block;
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--black);
}

.stat-label {
    color: var(--gray);
    font-size: 0.85rem;
    letter-spacing: 0.2px;
}

.hero-cta {
    display: flex;
    gap: 1.2rem;
    margin-top: 1.8rem;
}

.hero-image {
    position: relative;
    height: 500px;
    background: url('https://placehold.co/800x600/0D0D0D/FFFFFF/png?text=Hero+Image') center/cover;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-lg);
    transform: translateZ(0);
    transition: transform 0.5s ease;
}

.hero-image::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, rgba(0,0,0,0.2), rgba(0,0,0,0.4));
    border-radius: var(--border-radius);
    z-index: 1;
}

.featured-author {
    margin-top: 2rem;
    padding: 1.2rem;
    background: var(--white);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
}

.author-label {
    font-size: 0.85rem;
    color: var(--gray);
    text-transform: uppercase;
    letter-spacing: 0.8px;
}

.featured-author h4 {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--black);
    margin: 0.4rem 0;
}

.author-bio {
    font-size: 0.9rem;
    color: var(--gray);
    margin-bottom: 0.8rem;
}

.author-link {
    font-size: 0.9rem;
    color: var(--black);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
}

.author-link:hover {
    color: var(--gray-dark);
}

/* Categories Section */
.categories-section {
    margin: 4rem 0;
    text-align: center;
}

.section-header {
    text-align: center;
    margin-bottom: 3.5rem;
}

.section-header h3 {
    font-size: 2.8rem;
    font-weight: 700;
    color: var(--black);
    margin-bottom: 0.6rem;
    letter-spacing: 1.3px;
    text-transform: uppercase;
}

.section-header p {
    color: var(--gray);
    font-size: 1.1rem;
    max-width: 650px;
    margin: 0 auto;
    letter-spacing: 0.3px;
}

.shelf-decoration {
    width: 100px;
    height: 2px;
    background: var(--black);
    margin: 1.8rem auto;
    position: relative;
}

.shelf-decoration::before {
    content: '';
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 16px;
    height: 16px;
    background: var(--black);
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
}

.categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
}

.category-card {
    background: var(--white);
    padding: 2rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.category-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

.category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--black);
    transform: scaleX(0);
    transition: var(--transition);
}

.category-card:hover::before {
    transform: scaleX(1);
}

.category-icon {
    width: 70px;
    height: 70px;
    background: var(--white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.2rem;
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
}

.category-icon i {
    font-size: 1.8rem;
    color: var(--black);
}

.category-card:hover .category-icon {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

.category-card h4 {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--black);
    margin-bottom: 0.6rem;
}

.category-card p {
    color: var(--gray);
    font-size: 0.9rem;
    margin-bottom: 0.8rem;
}

.category-stats {
    font-size: 0.85rem;
    color: var(--gray);
}

.category-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    margin-top: 0.8rem;
    color: var(--black);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
}

.category-link:hover {
    color: var(--gray-dark);
    transform: translateX(4px);
}

/* Featured Books Section */
.featured-section {
    margin: 4rem 0;
    padding: 2rem 0;
    position: relative;
}

.featured-carousel {
    position: relative;
    margin-top: 2.5rem;
    padding: 0 3rem;
}

.carousel-container {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding: 1rem 0;
    gap: 2rem;
    scroll-behavior: smooth;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE and Edge */
}

.carousel-container::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Opera */
}

.featured-book {
    flex: 0 0 320px;
    background: var(--white);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: var(--transition);
    display: flex;
    flex-direction: column;
    scroll-snap-align: start;
    position: relative;
    z-index: 1;
}

.featured-book:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
}

.book-cover {
    position: relative;
    height: 360px;
    overflow: hidden;
    border-radius: 6px 6px 0 0;
    
}

.book-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    object-position: center;
    border-radius: 6px 6px 0 0;
    filter: grayscale(100%);
    transition: filter 0.4s ease, transform 0.4s ease;
    display: block;
    position: relative;
    z-index: 1;
}

.featured-book:hover .book-image {
    filter: grayscale(0%);
    transform: scale(1.05);
}

.book-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.3));
    border-radius: 6px 6px 0 0;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 2;
}

.featured-book:hover .book-overlay {
    opacity: 1;
}

.book-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: var(--black);
    color: var(--white);
    padding: 0.3rem 0.7rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
    z-index: 3;
}

.book-discount-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: #ff4444;
    color: white;
    padding: 0.5rem;
    border-radius: 4px;
    
}

.book-discount-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 100px;
    background: #ff4444;
    color: var(--white);
    padding: 0.3rem 0.7rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
    z-index: 3;
}

.featured-book:hover .book-badge {
    transform: scale(1.1);
}

.book-actions {
    position: absolute;
    top: 58px;
    left: 160px;
    display: flex;
    gap: 0.7rem;
    z-index: 3;
}

.featured-book:hover .book-actions {
    transform: scale(1.1);
    
}

.action-btn {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    background: var(--white);
    border: 1.5px solid var(--gray-light);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: var(--transition);
    color: var(--gray);
    z-index: 3;
}

.action-btn:hover {
    background: var(--black);
    color: var(--white);
    transform: scale(1.1);
}

.action-btn.favorite.active {
    
    color: var(--white);
    background: var(--black);
}

.action-btn.cart {
    background: var(--white);
    color: var(--black);
}

.action-btn.cart:hover {
    background: var(--black);
    color: var(--white);
}

.book-info {
    padding: 1.4rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
}

.book-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--black);
    margin-bottom: 0.3rem;
    display: inline-block;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.book-title:hover {
    color: var(--gray-dark);
}

.book-author {
    color: var(--gray);
    font-size: 0.85rem;
    font-style: italic;
}

.book-rating {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    margin: 0.4rem 0;
}

.stars {
    color: #FFD700;
    font-size: 0.85rem;
}

.rating-count {
    color: var(--gray);
    font-size: 0.75rem;
}

.book-meta {
    display: flex;
    justify-content: space-between;
    font-size: 0.85rem;
    color: var(--gray);
}

.meta-item i {
    margin-right: 0.3rem;
}

.book-description {
    font-size: 0.85rem;
    color: var(--gray);
    line-height: 1.5;
    flex: 1;
}

.carousel-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.8rem;
    margin-top: 1.8rem;
}

.carousel-nav {
    width: 42px;
    height: 42px;
    border-radius: 50%;
    background: var(--black);
    color: var(--white);
    border: none;
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-sm);
}

.carousel-nav:hover {
    background: var(--gray-dark);
    transform: scale(1.1);
}

.carousel-dots {
    display: flex;
    gap: 0.4rem;
}

.carousel-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--gray-light);
    cursor: pointer;
    transition: var(--transition);
}

.carousel-dot.active {
    background: var(--black);
    transform: scale(1.3);
}

/* Bookshelf Section */
.bookshelf-section {
    margin: 4rem 0;
}

.bookshelf {
    position: relative;
    margin-top: 2.5rem;
}

.shelf-top, .shelf-bottom {
    height: 16px;
    background: var(--black);
    border-radius: 4px;
    margin: 0 8px;
    box-shadow: var(--shadow-sm);
}

.shelf-bottom {
    margin-top: 16px;
}

.books-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1.2rem;
    justify-content: center;
    perspective: 1200px;
    padding: 1.8rem;
    background: linear-gradient(to bottom, var(--white), rgba(255,255,255,0.9));
    border-radius: var(--border-radius);
    min-height: 360px;
}

.book {
    width: 180px;
    height: 270px;
    position: relative;
    transform-style: preserve-3d;
    transition: var(--transition);
    cursor: pointer;
}

.book:hover {
    transform: translateY(-8px) rotateY(12deg);
}

.book-spine {
    position: absolute;
    left: 0;
    top: 0;
    width: 28px;
    height: 100%;
    background: var(--black);
    transform: rotateY(0deg) translateZ(14px);
    border-right: 1px solid var(--gray-dark);
    display: flex;
    align-items: center;
    justify-content: center;
    writing-mode: vertical-rl;
    text-orientation: mixed;
    color: var(--white);
    padding: 0.8rem 0;
    box-shadow: -2px 0 4px rgba(0,0,0,0.15);
}

.spine-content {
    transform: rotate(180deg);
    text-align: center;
}

.spine-content h4 {
    font-size: 0.85rem;
    margin-bottom: 0.4rem;
}

.spine-content p {
    font-size: 0.7rem;
    color: var(--gray-light);
}

.spine-decoration {
    position: absolute;
    bottom: 8px;
    left: 50%;
    transform: translateX(-50%);
    width: 16px;
    height: 1.5px;
    background: var(--gray-light);
}

.book-cover {
    position: absolute;
    left: 28px;
    top: 0;
    width: calc(100% - 28px);
    height: 100%;
    background: var(--white);
    transform: rotateY(0deg) translateZ(0);
    overflow: hidden;
    box-shadow: 2px 2px 4px rgba(0,0,0,0.15);
}

.book-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%);
    transition: var(--transition);
}

.book:hover img {
    filter: grayscale(0%);
}

.book-pages {
    position: absolute;
    right: 0;
    top: 0;
    width: 4px;
    height: 100%;
    background: repeating-linear-gradient(to bottom, #fff, #fff 1px, #f0f0f0 1px, #f0f0f0 2px);
}

.book-details {
    position: absolute;
    bottom: 0;
    left: 28px;
    width: calc(100% - 28px);
    padding: 0.7rem;
    background: var(--black);
    color: var(--white);
    text-align: center;
    transform: translateY(100%);
    transition: var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.4rem;
    text-decoration: none;
    font-size: 0.85rem;
}

.book:hover .book-details {
    transform: translateY(0);
}

.bookshelf-actions {
    text-align: center;
    margin-top: 1.8rem;
}

/* Newsletter Section */
.newsletter-section {
    background: var(--black);
    color: var(--white);
    padding: 4rem 0;
    margin: 4rem 0;
    border-radius: var(--border-radius);
    position: relative;
    overflow: hidden;
}

.newsletter-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255,255,255,0.05), transparent);
    opacity: 0.4;
}

.newsletter-content {
    position: relative;
    z-index: 1;
    max-width: 750px;
    margin: 0 auto;
    text-align: center;
}

.newsletter-icon {
    font-size: 2.8rem;
    color: var(--white);
    margin-bottom: 1.2rem;
}

.newsletter-content h3 {
    font-size: 2.3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    letter-spacing: 1px;
}

.newsletter-content p {
    font-size: 1.1rem;
    color: var(--gray-light);
    margin-bottom: 1.8rem;
}

.newsletter-form {
    display: flex;
    gap: 0.8rem;
    margin-top: 1.8rem;
    position: relative;
}

.newsletter-form input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1.5px solid var(--gray-light);
    border-radius: var(--border-radius);
    font-size: 0.9rem;
    background: var(--white);
    color: var(--black);
}

.newsletter-form button {
    position: relative;
}

.form-loading {
    margin-left: 0.4rem;
}

.newsletter-benefits {
    display: flex;
    justify-content: center;
    gap: 1.8rem;
    margin-top: 1.8rem;
}

.benefit-item {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.9rem;
}

.benefit-item i {
    color: var(--white);
}

/* Footer */
.site-footer {
    background: var(--black);
    color: var(--white);
    padding: 4.5rem 0 2.5rem;
    position: relative;
}

.site-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255,255,255,0.05), transparent);
    opacity: 0.4;
}

.footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3.5rem;
}

.footer-logo h3 {
    font-size: 2.1rem;
    font-weight: 700;
    margin-bottom: 1.2rem;
    letter-spacing: 1.1px;
}

.footer-logo p {
    color: var(--gray-light);
    font-size: 0.95rem;
    letter-spacing: 0.3px;
}

.social-links {
    display: flex;
    gap: 1.2rem;
    margin-top: 1.8rem;
}

.social-links a {
    width: 44px;
    height: 44px;
    background: var(--gray-dark);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    text-decoration: none;
    transition: var(--transition);
}

.social-links a:hover {
    background: var(--white);
    color: var(--black);
    transform: scale(1.08);
}

.footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2.5rem;
}

.footer-column h4 {
    font-size: 1.15rem;
    font-weight: 600;
    margin-bottom: 1.8rem;
    color: var(--white);
    letter-spacing: 0.5px;
}

.footer-column ul {
    list-style: none;
}

.footer-column li {
    margin-bottom: 0.9rem;
}

.footer-column a {
    color: var(--gray-light);
    text-decoration: none;
    font-size: 0.9rem;
    transition: var(--transition);
}

.footer-column a:hover {
    color: var(--white);
}

.footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 3.5rem;
    padding-top: 2.5rem;
    border-top: 1px solid var(--gray-dark);
    font-size: 0.9rem;
}

.payment-methods {
    display: flex;
    gap: 1.2rem;
}

.payment-methods i {
    font-size: 1.8rem;
    color: var(--gray-light);
    transition: var(--transition);
}

.payment-methods i:hover {
    color: var(--white);
}

/* Back to Top Button */
.back-to-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 48px;
    height: 48px;
