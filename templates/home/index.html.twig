{% extends 'base.html.twig' %}

{% block title %}MiniBiblio{% endblock %}

{% block body %}
<!-- Header -->
<header class="site-header">
    <div class="container">
        <div class="header-content">
            <div class="logo">
                <h1>MiniBiblio</h1>
                <p class="tagline">Œuvres d'élite, sélection d'élite</p>
            </div>
            <nav class="main-nav">
                <ul>
                    <li><a href="#" class="active">Accueil</a></li>
                    <li><a href="#">Livres</a></li>
                    <li><a href="#">Catégories</a></li>
                    <li><a href="#">Nouveautés</a></li>
                    <li><a href="/cart">Panier <span class="cart-badge">{{ totalQuantity|default(0) }}</span></a></li>
                </ul>
            </nav>
            <div class="header-search">
                <div class="search-container">
                    <input type="text" placeholder="Trouver un chef-d'œuvre..." class="search-input">
                    <button class="search-button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
            <div class="header-actions">
                {% if app.user %}
                <div class="user-info">
                    <i class="fas fa-user-circle"></i>
                    <span class="user-name" title="{{ app.user.email }}">{{ app.user.email|split('@')[0]|capitalize }}</span>
                    
                    <a href="{{ path('app_logout') }}" class="btn btn-outline" data-tooltip="Déconnexion">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-outline">Connexion</a>
                    <a href="{{ path('app_register') }}" class="btn btn-primary">Inscription</a>
                {% endif %}
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<main class="main-content">
    <div class="container">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="hero-content">
                <h2>Plongez dans l'Élite Littéraire</h2>
                <p>Une collection soigneusement curée de plus de 10,000 ouvrages d’exception</p>
                <div class="hero-stats">
                    <div class="stat-item" data-tooltip="Livres disponibles">
                        <i class="fas fa-book"></i>
                        <span class="stat-number">10,000+</span>
                        <span class="stat-label">Livres</span>
                    </div>
                    <div class="stat-item" data-tooltip="Membres actifs">
                        <i class="fas fa-users"></i>
                        <span class="stat-number">5,000+</span>
                        <span class="stat-label">Membres</span>
                    </div>
                    <div class="stat-item" data-tooltip="Évaluation moyenne">
                        <i class="fas fa-star"></i>
                        <span class="stat-number">4.8</span>
                        <span class="stat-label">Note</span>
                    </div>
                </div>
                <div class="hero-cta">
                    <a href="#" class="btn btn-primary btn-large">Explorer la Collection</a>
                    <a href="#" class="btn btn-outline2 btn-large">Découvrir les Nouveautés</a>
                </div>
                <div class="featured-author">
                    <p class="author-label">Auteur du mois</p>
                    <h4>Virginia Woolf</h4>
                    <p class="author-bio">Découvrez ses œuvres intemporelles, disponibles dès maintenant.</p>
                    <a href="#" class="author-link">Voir la Collection</a>
                </div>
            </div>
            <div class="hero-image">
                <div class="image-overlay"></div>
            </div>
        </section>

        <!-- Categories Section -->
        <section class="categories-section">
            <div class="section-header">
                <h3>Nos Catégories</h3>
                <p>Explorez notre collection par univers littéraire</p>
                <div class="shelf-decoration"></div>
            </div>
            <div class="categories-grid">
                <div class="category-card" data-tooltip="Romans captivants">
                    <div class="category-icon">
                        <i class="fas fa-book-open"></i>
                    </div>
                    <h4>Romans</h4>
                    <p>Des récits épiques et intimes</p>
                    <div class="category-stats">
                        <span>500+ livres</span>
                        <span>•</span>
                        <span>100+ auteurs</span>
                    </div>
                    <a href="#" class="category-link">Explorer <i class="fas fa-arrow-right"></i></a>
                </div>
                <div class="category-card" data-tooltip="Découvertes scientifiques">
                    <div class="category-icon">
                        <i class="fas fa-flask"></i>
                    </div>
                    <h4>Science</h4>
                    <p>Explorez l’univers et ses mystères</p>
                    <div class="category-stats">
                        <span>300+ livres</span>
                        <span>•</span>
                        <span>50+ auteurs</span>
                    </div>
                    <a href="#" class="category-link">Explorer <i class="fas fa-arrow-right"></i></a>
                </div>
                <div class="category-card" data-tooltip="Récits historiques">
                    <div class="category-icon">
                        <i class="fas fa-history"></i>
                    </div>
                    <h4>Histoire</h4>
                    <p>Revivez les grandes époques</p>
                    <div class="category-stats">
                        <span>400+ livres</span>
                        <span>•</span>
                        <span>80+ auteurs</span>
                    </div>
                    <a href="#" class="category-link">Explorer <i class="fas fa-arrow-right"></i></a>
                </div>
                <div class="category-card" data-tooltip="Pensées profondes">
                    <div class="category-icon">
                        <i class="fas fa-brain"></i>
                    </div>
                    <h4>Philosophie</h4>
                    <p>Réflexions des grands esprits</p>
                    <div class="category-stats">
                        <span>200+ livres</span>
                        <span>•</span>
                        <span>40+ auteurs</span>
                    </div>
                    <a href="#" class="category-link">Explorer <i class="fas fa-arrow-right"></i></a>
                </div>
            </div>
        </section>

        <!-- Featured Books Section -->
        <section class="featured-section">
            <div class="section-header">
                <h3>Livres en Vedette</h3>
                <p>Nos sélections du moment, triées sur le volet</p>
                <div class="shelf-decoration"></div>
            </div>
            <div class="featured-carousel">
                <div class="carousel-container">
                    {% for livre in livres|slice(0, 5) %}
                        <div class="featured-book">
                            <div class="book-container">
                                <!-- Image Section -->
                                <div class="book-image-wrapper">
                                    <img src="{{ livre.imageUrl|default('https://placehold.co/300x450/0D0D0D/FFFFFF/png?text=' ~ livre.title|url_encode) }}"
                                        alt="{{ livre.title }}"
                                        class="book-image"
                                        data-src="{{ livre.imageUrl|default('https://placehold.co/300x450/0D0D0D/FFFFFF/png?text=' ~ livre.title|url_encode) }}"
                                        onerror="this.src='https://placehold.co/300x450/0D0D0D/FFFFFF/png?text=Image+Indisponible';">
                                    <div class="book-badge">Nouveau</div>
                                    {% if livre.discount %}
                                        <div class="book-discount-badge"><i class="fas fa-tag"></i> {{ livre.discount }}% Off</div>
                                    {% endif %}
                                    {# <div class="book-overlay"></div> #}
                                    <div class="book-actions">
                                        <button class="action-btn favorite" data-tooltip="Ajouter aux favoris">
                                            <i class="far fa-heart"></i>
                                        </button>
                                        <button class="action-btn share" data-tooltip="Partager">
                                            <i class="fas fa-share-alt"></i>
                                        </button>
                                        <form action="{{ path('cart_add', {'id': livre.id}) }}" method="post">
                                            <button type="submit" class="action-btn cart" data-tooltip="Ajouter au panier">
                                                <i class="fas fa-shopping-cart"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>

                                <!-- Info Section -->
                                <div class="book-info">
                                    <h4 class="book-title" data-tooltip="{{ livre.title }}">
                                        <i class="fas fa-book"></i> {{ livre.title }}
                                    </h4>
                                    <p class="book-author">
                                        <i class="fas fa-user-edit"></i> {{ livre.author }}
                                    </p>
                                    <div class="book-details">
                                        {% if livre.publicationYear %}
                                            <p><i class="fas fa-calendar-alt"></i> <strong>Année:</strong> {{ livre.publicationYear }}</p>
                                        {% endif %}
                                        {% if livre.genre %}
                                            <p><i class="fas fa-bookmark"></i> <strong>Genre:</strong> {{ livre.genre }}</p>
                                        {% endif %}
                                        {% if livre.language %}
                                            <p><i class="fas fa-language"></i> <strong>Langue:</strong> {{ livre.language }}</p>
                                        {% endif %}
                                        {% if livre.publisher %}
                                            <p><i class="fas fa-building"></i> <strong>Éditeur:</strong> {{ livre.publisher }}</p>
                                        {% endif %}
                                        {% if livre.numberOfPages %}
                                            <p><i class="fas fa-book-open"></i> <strong>Pages:</strong> {{ livre.numberOfPages }}</p>
                                        {% endif %}
                                    </div>
                                    <div class="book-rating">
                                        <div class="stars">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star-half-alt"></i>
                                        </div>
                                        <span class="rating-count"><i class="fas fa-users"></i> (128)</span>
                                    </div>
                                    <div class="book-meta">
                                        {% if livre.numberOfPages %}
                                            <span class="meta-item"><i class="fas fa-book-open"></i> {{ livre.numberOfPages }} pages</span>
                                        {% endif %}
                                        <span class="meta-item"><i class="fas fa-calendar-check"></i> {{ livre.publicationYear|default('2023') }}</span>
                                        {% if livre.availability %}
                                            <span class="meta-item"><i class="fas fa-check-circle"></i> En stock</span>
                                        {% endif %}
                                    </div>
                                    <div class="book-description">
                                        <p><i class="fas fa-quote-left"></i> {{ livre.description|default('Un roman captivant qui vous emmènera dans un voyage extraordinaire.') }}</p>
                                    </div>
                                    <a href="{{ path('book_details', {'id': livre.id}) }}" class="btn btn-primary">
                                        <i class="fas fa-eye"></i> Voir les détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <!-- Fallback if livres is empty -->
                        {% for i in 1..5 %}
                            <div class="featured-book">
                                <div class="book-cover">
                                    <img src="https://placehold.co/300x450/0D0D0D/FFFFFF/png?text=Livre+Exemple+{{ i }}"
                                         alt="Livre Exemple {{ i }}"
                                         class="book-image"
                                         data-src="https://placehold.co/300x450/0D0D0D/FFFFFF/png?text=Livre+Exemple+{{ i }}"
                                         onerror="this.src='https://placehold.co/300x450/0D0D0D/FFFFFF/png?text=Image+Indisponible';">
                                    <div class="book-overlay"></div>
                                    <div class="book-badge">Nouveau</div>
                                    <div class="book-actions">
                                        <button class="action-btn favorite" data-tooltip="Ajouter aux favoris">
                                            <i class="far fa-heart"></i>
                                        </button>
                                        <button class="action-btn share" data-tooltip="Partager">
                                            <i class="fas fa-share-alt"></i>
                                        </button>
                                        <button class="action-btn cart" data-tooltip="Ajouter au panier" disabled>
                                            <i class="fas fa-shopping-cart"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="book-info">
                                    <h4 class="book-title" data-tooltip="Livre Exemple {{ i }}">Livre Exemple {{ i }}</h4>
                                    <p class="book-author">Auteur Inconnu</p>
                                    <div class="book-rating">
                                        <div class="stars">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star-half-alt"></i>
                                        </div>
                                        <span class="rating-count">(128)</span>
                                    </div>
                                    <div class="book-meta">
                                        <span class="meta-item"><i class="fas fa-book-open"></i> 320 pages</span>
                                        <span class="meta-item"><i class="fas fa-calendar"></i> 2023</span>
                                    </div>
                                    <div class="book-description">
                                        <p>Un roman captivant qui vous emmènera dans un voyage extraordinaire.</p>
                                    </div>
                                    <a href="#" class="btn btn-primary" disabled>Voir les détails</a>
                                </div>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
                <div class="carousel-controls">
                    <button class="carousel-nav prev" data-tooltip="Précédent"><i class="fas fa-chevron-left"></i></button>
                    <div class="carousel-dots"></div>
                    <button class="carousel-nav next" data-tooltip="Suivant"><i class="fas fa-chevron-right"></i></button>
                </div>
            </div>
        </section>

        <!-- Main Bookshelf Section -->
        <section class="bookshelf-section">
            <div class="section-header">
                <h3>Notre Bibliothèque</h3>
                <p>Explorez notre collection complète</p>
                <div class="shelf-decoration"></div>
            </div>
            <div class="bookshelf">
                <div class="shelf-top"></div>
                <div class="books-container">
                    {% for livre in livres %}
                        <div class="book" data-tooltip="{{ livre.title }}">
                            <div class="book-spine">
                                <div class="spine-content">
                                    <h4>{{ livre.title }}</h4>
                                    <p>{{ livre.author }}</p>
                                    <div class="spine-decoration"></div>
                                </div>
                            </div>
                            <div class="book-cover">
                                <img src="{{ livre.imageUrl|default('https://placehold.co/300x450/0D0D0D/FFFFFF/png?text=' ~ livre.title|url_encode) }}"
                                     alt="{{ livre.title }}"
                                     class="book-image"
                                     data-src="{{ livre.imageUrl|default('https://placehold.co/300x450/0D0D0D/FFFFFF/png?text=' ~ livre.title|url_encode) }}"
                                     onerror="this.src='https://placehold.co/300x450/0D0D0D/FFFFFF/png?text=Image+Indisponible';">
                                <div class="book-overlay"></div>
                                <div class="book-pages"></div>
                            </div>
                            <a href="{{ path('book_details', {'id': livre.id}) }}" class="book-details">
                                <span>Voir les détails</span>
                                <i class="fas fa-book-open"></i>
                            </a>
                        </div>
                    {% endfor %}
                </div>
                <div class="shelf-bottom"></div>
            </div>
            <div class="bookshelf-actions">
                <a href="#" class="btn btn-primary">Voir plus de livres</a>
            </div>
        </section>

        <!-- Newsletter Section -->
        <section class="newsletter-section">
            <div class="newsletter-content">
                <div class="newsletter-icon">
                    <i class="fas fa-envelope-open-text"></i>
                </div>
                <h3>Restez au Cœur de la Littérature</h3>
                <p>Recevez nos nouveautés et offres exclusives directement dans votre boîte de réception</p>
                <form class="newsletter-form">
                    <input type="email" placeholder="Votre adresse email" required>
                    <button type="submit" class="btn btn-primary">
                        <span>S'inscrire</span>
                        <i class="fas fa-paper-plane"></i>
                        <span class="form-loading" style="display: none;"><i class="fas fa-spinner fa-spin"></i></span>
                    </button>
                </form>
                <div class="newsletter-benefits">
                    <div class="benefit-item" data-tooltip="Offres réservées">
                        <i class="fas fa-gift"></i>
                        <span>Offres exclusives</span>
                    </div>
                    <div class="benefit-item" data-tooltip="Avant-premières">
                        <i class="fas fa-bell"></i>
                        <span>Nouveautés</span>
                    </div>
                    <div class="benefit-item" data-tooltip="Promotions spéciales">
                        <i class="fas fa-percent"></i>
                        <span>Réductions</span>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>

<!-- Footer -->
<footer class="site-footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-logo">
                <h3>MiniBiblio</h3>
                <p>Œuvres d'élite, sélection d'élite</p>
                <div class="social-links">
                    <a href="#" data-tooltip="Facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" data-tooltip="Twitter"><i class="fab fa-twitter"></i></a>
