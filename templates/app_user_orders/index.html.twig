}

.user-info .btn-outline {
    border-color: var(--white);
    color: var(--white);
    background: transparent;
    padding: 0.4rem 1.1rem;
    font-size: 0.92rem;
}

.user-info .btn-outline:hover {
    background: var(--white);
    color: var(--black);
}

/* Orders Section */
.orders-section {
    margin: 4rem 0;
}

.section-header {
    text-align: center;
    margin-bottom: 3.5rem;
}

.section-header h3 {
    font-size: 2.8rem;
    font-weight: 700;
    color: var(--black);
    margin-bottom: 0.6rem;
    letter-spacing: 1.3px;
    text-transform: uppercase;
}

.section-header h3 i {
    margin-right: 0.5rem;
}

.section-header p {
    color: var(--gray);
    font-size: 1.1rem;
    max-width: 650px;
    margin: 0 auto;
    letter-spacing: 0.3px;
}

.shelf-decoration {
    width: 100px;
    height: 2px;
    background: var(--black);
    margin: 1.8rem auto;
    position: relative;
}

.shelf-decoration::before {
    content: '';
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 16px;
    height: 16px;
    background: var(--black);
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
}

.orders-list {
    margin-top: 2rem;
    overflow-x: auto; /* Ensure table is scrollable on small screens */
}

