{% block stylesheets %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
/* Base Styles */
:root {
    --black: #0D0D0D;
    --white: #FFFFFF;
    --gray-dark: #262626;
    --gray: #595959;
    --gray-light: #A6A6A6;
    --shadow-sm: 0 2px 8px rgba(0,0,0,0.12);
    --shadow-md: 0 6px 16px rgba(0,0,0,0.18);
    --shadow-lg: 0 12px 32px rgba(0,0,0,0.22);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --border-radius: 8px;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Garamond', 'Georgia', serif;
    line-height: 1.75;
    color: var(--black);
    background: var(--white);
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
}

.container {
    width: 100%;
    max-width: 1320px;
    margin: 0 auto;
    padding: 0 24px;
}

/* Button Styles */
.btn {
    display: inline-flex;
    align-items: center;
    padding: 0.8rem 1.8rem;
    border-radius: var(--border-radius);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
    border: none;
    text-decoration: none;
    font-size: 0.95rem;
    position: relative;
    overflow: hidden;
    z-index: 1;
}

.btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: 0.5s;
    z-index: -1;
}

.btn:hover::before {
    left: 100%;
}

.btn-primary {
    background: var(--black);
    color: var(--white);
    box-shadow: var(--shadow-sm);
}

.btn-primary:hover {
    background: var(--gray-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.btn-outline {
    background: transparent;
    border: 1.5px solid var(--white);
    color: var(--white);
}

.btn-outline:hover {
    background: var(--white);
    color: var(--black);
    transform: translateY(-2px);
}

.btn-outline2 {
    background: transparent;
    border: 1.5px solid var(--black);
    color: var(--black);
}

.btn-outline2:hover {
    background: var(--black);
    color: var(--white);
    transform: translateY(-2px);
}

.btn-large {
    padding: 1.1rem 2.4rem;
    font-size: 1rem;
}

/* Tooltip Styles */
[data-tooltip] {
    position: relative;
}

[data-tooltip]::after {
    content: attr(data-tooltip);
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    background: var(--black);
    color: var(--white);
    padding: 0.4rem 0.8rem;
    border-radius: 4px;
    font-size: 0.8rem;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: var(--transition);
    z-index: 10;
}

[data-tooltip]:hover::after {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(4px);
}

/* Header Styles */
.site-header {
    background: var(--black);
    padding: 1.8rem 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: var(--shadow-sm);
    backdrop-filter: blur(12px);
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2.2rem;
}

.logo h1 {
    color: var(--white);
    font-size: 2.4rem;
    font-weight: 700;
    letter-spacing: 1.2px;
    text-transform: uppercase;
}

.tagline {
    color: var(--gray-light);
    font-size: 0.85rem;
    font-style: italic;
    letter-spacing: 0.6px;
    margin-top: 0.2rem;
}
/* User Info Styles */
.user-info {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    background: var(--black);
    padding: 0.7rem 1.3rem;
    border-radius: 24px;
    box-shadow: var(--shadow-sm);
    color: var(--white);
    font-size: 0.97rem;
    font-weight: 500;
    transition: var(--transition);
    border: 1.5px solid var(--gray-dark);
    position: relative;
}

.user-info i {
    font-size: 1.15rem;
    color: var(--white);
    background: var(--gray-dark);
    border-radius: 50%;
    padding: 0.35rem;
    margin-right: 0.2rem;
    transition: var(--transition);
}

.user-info .user-name {
    color: var(--white);
    font-weight: 600;
    letter-spacing: 0.2px;
    margin-right: 0.7rem;
    max-width: 140px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.user-info .btn-outline {
    border-color: var(--white);
    color: var(--white);
    background: transparent;
    padding: 0.4rem 1.1rem;
    font-size: 0.92rem;
    margin-left: 0.3rem;
}

.user-info .btn-outline:hover {
    background: var(--white);
    color: var(--black);
}


/* Navigation */
.main-nav ul {
    display: flex;
    gap: 1.8rem;
    list-style: none;
}

.main-nav a {
    color: var(--white);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    position: relative;
    transition: var(--transition);
}

.main-nav a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 1.5px;
    background: var(--white);
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.3s ease;
}

.main-nav a:hover::after,
.main-nav a.active::after {
    transform: scaleX(1);
}

.cart-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    background: var(--gray-dark);
    color: var(--white);
    border-radius: 50%;
    font-size: 0.75rem;
    margin-left: 0.4rem;
    transition: var(--transition);
}

.main-nav a:hover .cart-badge {
    background: var(--white);
    color: var(--black);
}

/* Search Bar */
.header-search {
    flex: 1;
    max-width: 380px;
}

.search-container {
    position: relative;
    display: flex;
    align-items: center;
}

.search-input {
    width: 100%;
    padding: 0.75rem 1.1rem;
    padding-right: 2.8rem;
    border: 1.5px solid var(--gray-light);
    border-radius: var(--border-radius);
    background: var(--white);
    color: var(--black);
    font-size: 0.9rem;
    transition: var(--transition);
}

.search-input::placeholder {
    color: var(--gray);
}

.search-input:focus {
    outline: none;
    border-color: var(--black);
    box-shadow: var(--shadow-sm);
    transform: scale(1.01);
}

.search-button {
    position: absolute;
    right: 0.9rem;
    top: 50%;
    transform: translateY(-50%);
    background: transparent;
    border: none;
    color: var(--gray);
    cursor: pointer;
    font-size: 1rem;
    transition: var(--transition);
}

.search-button:hover {
    color: var(--black);
    transform: translateY(-50%) scale(1.15);
}

/* Cart Section */
.cart-section {
    padding: 4.5rem 0;
    position: relative;
}

.section-header {
    text-align: center;
    margin-bottom: 3.5rem;
}

.section-header h3 {
    font-size: 2.8rem;
    font-weight: 700;
    color: var(--black);
    margin-bottom: 0.6rem;
    letter-spacing: 1.3px;
    text-transform: uppercase;
}

.section-header p {
    color: var(--gray);
    font-size: 1.1rem;
    max-width: 650px;
    margin: 0 auto;
    letter-spacing: 0.3px;
}

.shelf-decoration {
    width: 100px;
    height: 2px;
    background: var(--black);
    margin: 1.8rem auto;
    position: relative;
}

.shelf-decoration::before {
    content: '';
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 16px;
    height: 16px;
    background: var(--black);
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
}

.cart-grid {
    display: grid;
    grid-template-columns: 3fr 1fr;
    gap: 2.5rem;
}

.cart-items {
    background: var(--white);
    border-radius: var(--border-radius);
    padding: 2.2rem;
