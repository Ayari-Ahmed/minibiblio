{% extends 'base.html.twig' %}

{% block title %}Shopping Cart - MiniBiblio{% endblock %}

{% block body %}
<!-- Header -->
<header class="site-header">
    <div class="container">
        <div class="header-content">
            <div class="logo">
                <h1>MiniBiblio</h1>
                <p class="tagline">Œuvres d'élite, sélection d'élite</p>
            </div>
            <nav class="main-nav">
                <ul>
                    <li><a href="/">Accueil</a></li>
                    <li><a href="#">Livres</a></li>
                    <li><a href="#">Catégories</a></li>
                    <li><a href="#">Nouveautés</a></li>
                    <li><a href="/cart" class="active">Panier <span class="cart-badge">{{ totalQuantity }}</span></a></li>
                </ul>
            </nav>
            <div class="header-search">
                <div class="search-container">
                    <input type="text" placeholder="Trouver un chef-d'œuvre..." class="search-input">
                    <button class="search-button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
            <div class="header-actions">
                {% if app.user %}
                <div class="user-info">
                    <i class="fas fa-user-circle"></i>
                    <span class="user-name" title="{{ app.user.email }}">{{ app.user.email|split('@')[0]|capitalize }}</span>
                    
                    <a href="{{ path('app_logout') }}" class="btn btn-outline" data-tooltip="Déconnexion">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-outline">Connexion</a>
                    <a href="{{ path('app_register') }}" class="btn btn-primary">Inscription</a>
                {% endif %}
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<main class="main-content">
    <div class="container">
        <section class="cart-section">
            <div class="section-header">
                <h3>Votre Collection Curée</h3>
                <p>Des livres triés sur le volet pour votre bibliothèque</p>
                <div class="shelf-decoration"></div>
            </div>

            {% if items|length > 0 %}
                <div class="cart-grid">
                    <div class="cart-items">
                        {% for item in items %}
                            <div class="cart-item" data-id="{{ item.livre.id }}">
                                <div class="cart-item-image">
                                    <img src="https://picsum.photos/120/180?grayscale&random={{ item.livre.id }}" 
                                         alt="{{ item.livre.title }}"
                                         class="img-fluid">
                                    <div class="image-overlay"></div>
                                </div>
                                <div class="cart-item-details">
                                    <h4 class="book-title" data-tooltip="{{ item.livre.title }}">{{ item.livre.title }}</h4>
                                    <p class="book-author">par {{ item.livre.author }}</p>
                                    <div class="cart-item-meta">
                                        <span class="meta-item">
                                            <i class="fas fa-euro-sign"></i> {{ item.livre.price|number_format(2) }}
                                        </span>
                                    </div>
                                    <form action="{{ path('cart_update', {'id': item.livre.id}) }}" method="post" class="cart-quantity-form">
                                        <label for="quantity-{{ item.livre.id }}" class="quantity-label">Quantité:</label>
                                        <div class="quantity-control">
                                            <button type="button" class="quantity-btn minus" onclick="this.parentElement.querySelector('input').value = Math.max(1, parseInt(this.parentElement.querySelector('input').value) - 1); this.form.submit();">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                            <input type="number" 
                                                   id="quantity-{{ item.livre.id }}"
                                                   name="quantity" 
                                                   class="quantity-input"
                                                   value="{{ item.quantity }}" 
                                                   min="1" 
                                                   max="99"
                                                   onchange="this.form.submit()">
                                            <button type="button" class="quantity-btn plus" onclick="this.parentElement.querySelector('input').value = Math.min(99, parseInt(this.parentElement.querySelector('input').value) + 1); this.form.submit();">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>
                                        <div class="form-loading" style="display: none;">
                                            <i class="fas fa-spinner fa-spin"></i>
                                        </div>
                                    </form>
                                </div>
                                <div class="cart-item-actions">
                                    <a href="{{ path('cart_remove', {'id': item.livre.id}) }}" 
                                       class="action-btn remove"
                                       data-tooltip="Supprimer l'article">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    <button class="action-btn favorite" data-tooltip="Ajouter aux favoris">
                                        <i class="far fa-heart"></i>
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="cart-sidebar">
                        <div class="cart-summary">
                            <h4>Récapitulatif</h4>
                            <div class="summary-content">
                                <div class="summary-item">
                                    <span>Articles:</span>
                                    <span>{{ totalQuantity }}</span>
                                </div>
                                <div class="summary-item total">
                                    <span>Total:</span>
                                    <span>€{{ total|number_format(2) }}</span>
                                </div>
                                <div class="summary-item delivery-note">
                                    <span>Livraison estimée:</span>
                                    <span>2-3 jours</span>
                                </div>
                            </div>
                            <div class="summary-actions">
                                <a href="{{ path('cart_clear') }}" class="btn btn-outline2">
                                    <i class="fas fa-trash me-2"></i>Vider le Panier
                                </a>
                                <a href="{{ path('cart_checkout') }}" class="btn btn-primary">
                                    <i class="fas fa-check me-2"></i>Finaliser l'Achat
                                </a>
                            </div>
                            <div class="checkout-progress">
                                <span class="progress-step active">Panier</span>
                                <span class="progress-arrow">→</span>
                                <span class="progress-step">Paiement</span>
                                <span class="progress-arrow">→</span>
                                <span class="progress-step">Confirmation</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="empty-cart">
                    <div class="empty-cart-content">
                        <i class="fas fa-shopping-cart empty-cart-icon"></i>
                        <h3>Votre Panier Est Vide</h3>
                        <p>Plongez dans notre collection pour découvrir des trésors littéraires.</p>
                        <a href="/" class="btn btn-primary btn-large">
                            <i class="fas fa-book me-2"></i>Explorer Maintenant
                        </a>
                    </div>
                </div>
            {% endif %}
        </section>
    </div>
</main>

<!-- Footer -->
<footer class="site-footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-logo">
                <h3>MiniBiblio</h3>
                <p>Œuvres d'élite, sélection d'élite</p>
                <div class="social-links">
                    <a href="#" data-tooltip="Facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" data-tooltip="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" data-tooltip="Instagram"><i class="fab fa-instagram"></i></a>
